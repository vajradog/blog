<div class="large-12 columns">
  <div class="large-8 large-centered columns text-center" >
    <% cache do %>
    <%= link_to image_tag('thupten.png'), root_path %>
    <introabout> @vajradog <i>aka Thupten N. Chakrishar is a Tibetan living in New York.</i></introabout>
    <% end %>

    <%= Category.all.map do |cat| %>
      <% link_to cat.name, category_path(cat)%>
    <% end.to_sentence(:words_connector => ' - ', :last_word_connector => ' - ').html_safe %>

    <hr>

