    <% if logged_in? %>
      <small>You are logged in</small> <br>
      <%= link_to "New Post", new_post_path, class: "button success small" %> 
      <%= link_to "Logout: #{current_user.username}", logout_path, class: "button alert small" %> 
      <%= link_to "New Category", new_category_path, class: "button secondary small" %>
    <% end %>
</div>

